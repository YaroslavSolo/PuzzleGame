<ContentControl x:Class="PuzzleGame.ExamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuzzleGame"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d"
      Height="500" Width="1000"
      MinHeight="500" MinWidth="1000"
      FontSize="15">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Grid.Column="0"  Background="LightGoldenrodYellow"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
            <TextBlock Margin="80,0,0,0">Осталось попыток:</TextBlock>
            <TextBlock Name="numAttemptsLeft" Margin="5,0,0,0">99</TextBlock>
            <TextBlock Margin="20,0,0,0">Время:</TextBlock>
            <TextBlock Name="timeLeft" MinWidth="25" Margin="5,0,0,0">999</TextBlock>
            <TextBlock Margin="5,0,0,0">c</TextBlock>
            <Button Name="newAttempt" Margin="30,0,0,0" Click="NewAttempt" Width="114">Новая попытка</Button>
            <Button Margin="30,0,0,0" Click="NextPuzzleClick" Width="149">Следующее задание</Button>
            <TextBlock Name="movesLeftText" HorizontalAlignment="Right" Margin="30,0,0,0">Осталось переместить спичек:</TextBlock>
            <TextBlock Name="movesLeft" Margin="5,0,0,0">99</TextBlock>
        </StackPanel>
        <Canvas Name="canvas" Grid.Row="1">
            
        </Canvas>
    </Grid>
</ContentControl>
